{
    "name": "template",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "eslint . --fix --cache",
        "format": "prettier --write .",
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "build-analyze": "ANALYZE=true next build",
        "email:dev": "email dev -d ./components/templates/emails",
        "email:build": "email build -d ./components/templates/emails",
        "d1:generate": "drizzle-kit generate --config ./integrations/d1/drizzle.config.ts",
        "d1:studio:development": "NODE_ENV=development drizzle-kit studio --config ./integrations/d1/drizzle.config.ts",
        "d1:studio:production": "NODE_ENV=production drizzle-kit studio --config ./integrations/d1/drizzle.config.ts",
        "cf:typegen": "wrangler types -e development --env-interface CloudflareEnv ./cloudflare-env.d.ts",
        "cf:build:production": "opennextjs-cloudflare build -e production",
        "cf:build:development": "opennextjs-cloudflare build -e development",
        "cf:deploy:production": "opennextjs-cloudflare deploy -e production",
        "cf:deploy:development": "opennextjs-cloudflare deploy -e development"
    },
    "dependencies": {
        "@next/third-parties": "^16.0.10",
        "@opennextjs/cloudflare": "^1.14.6",
        "@react-email/components": "1.0.1",
        "@react-email/render": "2.0.0",
        "@sglara/cn": "^1.0.0",
        "@tanstack/react-devtools": "^0.8.4",
        "@tanstack/react-form": "^1.27.3",
        "@tanstack/react-form-devtools": "^0.2.6",
        "@tanstack/react-query": "^5.90.12",
        "@tanstack/react-query-devtools": "^5.91.1",
        "ahooks": "^3.9.6",
        "better-auth": "^1.4.7",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "drizzle-zod": "^0.8.3",
        "next": "15.5.7",
        "next-intl": "^4.6.0",
        "nuqs": "^2.8.5",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "server-only": "^0.0.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@next/bundle-analyzer": "^16.0.10",
        "@tailwindcss/postcss": "^4.1.18",
        "@tanstack/eslint-plugin-query": "^5.91.2",
        "@types/node": "^24.10.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "drizzle-kit": "^0.31.8",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.0.10",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsonc": "^2.21.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-unused-imports": "^4.3.0",
        "jsonc-eslint-parser": "^2.4.2",
        "prettier": "^3.7.4",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "react-email": "5.0.8",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0",
        "wrangler": "^4.55.0"
    }
}
